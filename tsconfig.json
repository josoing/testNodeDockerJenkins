{
    "compilerOptions": {
        "allowJs":true,
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "lib": ["dom", "es2017"],
        "module": "es6",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "outDir": "./dist/",
        "skipLibCheck": true,
        "sourceMap": false,
        "strictNullChecks": true,
        "target": "ES5"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "**/*.test.*",
        "**/__mocks__/*.*",
        "build"
    ]
}
